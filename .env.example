# ===========================
# MULTIMODAL RAG CONFIGURATION
# ===========================

# IMPORTANT: copy this file to .env before running the application
# cp .env.example .env

# ===========================
# TOKENIZERS CONFIGURATION
# ===========================

# Disable HuggingFace tokenizers parallelism to avoid fork warnings
TOKENIZERS_PARALLELISM=false

# ===========================
# API KEYS (MANDATORY)
# ===========================

# Groq API for LLM (MANDATORY)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ===========================
# DATABASE CONFIGURATION
# ===========================

# Database URL for Qdrant
QDRANT_URL=http://localhost:6333

# Collection name for Qdrant
COLLECTION_NAME=papers_custom_pipeline

# ===========================
# LLM CONFIGURATION
# ===========================

# Model to use (available on Groq)
LLM_MODEL_NAME=llama3-8b-8192

# ===========================
# LOGGING
# ===========================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

